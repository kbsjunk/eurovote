<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<link href='http://fonts.googleapis.com/css?family=Roboto:300,300italic,500,500italic&amp;subset=latin,cyrillic-ext,latin-ext,cyrillic,greek-ext,greek' rel='stylesheet' type='text/css'>
	{{ stylesheet_link_tag() }}
	{{ javascript_include_tag() }}
</head>

<body>

	<div class="container">
		{% if (session_has('message')) %}
		<div class="flash alert">
			<p>{{ session_get('message') }}</p>
		</div>
		{% endif %}

		{% block main %}{% endblock %}
	</div>

</body>

</html>
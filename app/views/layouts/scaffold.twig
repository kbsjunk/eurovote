<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	{{ stylesheet_link_tag() }}
	{{ javascript_include_tag() }}
</head>

<body>

	<div class="container">
		{% if (session_has('message')) %}
		<div class="flash alert">
			<p>{{ session_get('message') }}</p>
		</div>
		{% endif %}

		{% block main %}{% endblock %}
	</div>

</body>

</html>